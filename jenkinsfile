pipeline {
    environment {
    registry = "viswamy/studentapp-docker-container"
    registryCredential = 'dockerhub'
    dockerImage = ''
    }
    agent any     
    tools{
        maven 'maven'
        }   
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                     mvn --version
                     mvn clean package'''
            }
        }
	
	stage('Building image') {
	   steps{
	   script {
		 dockerImage = docker.build registry + ":v1"
		}
	      }
	    }
               
	    
	  stage('Deploy Image') {
	  steps{    
	  script {
	        docker.withRegistry( '', registryCredential ) {
		dockerImage.push()
	      }
	    }
	  }
        }
	 
    }
}
